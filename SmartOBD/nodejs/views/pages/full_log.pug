doctype html

link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
    integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')
include header.pug
style
  include home.css

.log
  h1 2012 Honda Accord Full Log
    .container-50
      .row
        .col-sm
          .card

                  form(action="", method="get")
                    select.custom-select(name="car_choice", onchange="this.form.submit()")
                      option(selected) Select Car
                      each variable in car_list
                        option(value=variable.id) #{variable.model}

                  form.form(action="", method="post")
                    select.custom-select(name="time_choice", onchange="this.form.submit()")
                      option(selected) Select Read Time
                      each variable in time_list
                        option(value=variable.time) #{variable.time}
				
      .row
        .col-sm
          table.table.table-striped
            tbody
              tr
                th.text-left(scope='row') Mph
                td ...
                td ...
              tr
                th.text-left(scope='row') Fuel Level
                td ...
                td ...
              tr
                th.text-left(scope='row') Engine Status
                td ...
                td ...
              tr
                th.text-left(scope='row') Etc.
                td ...
                td ...



include footer.pug